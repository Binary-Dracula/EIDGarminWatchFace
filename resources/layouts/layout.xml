<layout id="WatchFace" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://developer.garmin.com/downloads/connect-iq/resources.xsd">

   <drawable class="CustomBackgroundDrawable"/>
   <!-- 距离 -->
   <label id="Distance" x="50%" y="2%" color="Gfx.COLOR_WHITE" font = "Graphics.FONT_TINY" justification = "Graphics.TEXT_JUSTIFY_CENTER"/>

   <!-- 步数 -->
   <label id="StepCount" x="24%" y="14%" color="Gfx.COLOR_BLACK" font = "Graphics.FONT_SMALL" justification = "Graphics.TEXT_JUSTIFY_LEFT"/>

   <!-- 心率 -->
   <label id="HeartRate" x="71%" y="16%" color="Gfx.COLOR_WHITE" font = "Graphics.FONT_SMALL" justification = "Graphics.TEXT_JUSTIFY_CENTER"/>

   <!-- 卡路里 -->
   <label id="Calories" x="42%" y="27%" color="Gfx.COLOR_WHITE" font = "Graphics.FONT_XTINY" justification = "Graphics.TEXT_JUSTIFY_LEFT"/>

   <!-- 电量 -->
   <label id="Battery" x="15%" y="44%" color="Gfx.COLOR_WHITE" font = "Graphics.FONT_XTINY" justification = "Graphics.TEXT_JUSTIFY_CENTER"/>

   <!-- 日期 -->
   <label id="Date" x="28%" y="38%" color="Gfx.COLOR_WHITE" font = "Graphics.FONT_TINY" justification = "Graphics.TEXT_JUSTIFY_LEFT"/>

   <!-- 星期 -->
   <label id="Weekday" x="72%" y="40%" font = "@Fonts.rubik_f13_white" justification = "Graphics.TEXT_JUSTIFY_RIGHT"/>

   <!-- 身体压力值 -->
   <label id="Stress" x="85%" y="44%" color="Gfx.COLOR_WHITE" font = "Graphics.FONT_XTINY" justification = "Graphics.TEXT_JUSTIFY_CENTER"/>

   <!-- 日落时间 -->
   <label id="SunsetTime" x="50%" y="53%" color="Gfx.COLOR_WHITE" font = "Graphics.FONT_XTINY" justification = "Graphics.TEXT_JUSTIFY_CENTER"/>

   <!-- AM / PM -->
   <label id="AMPM" x="8%" y="64%" color="Gfx.COLOR_WHITE" font = "Graphics.FONT_XTINY" justification = "Graphics.TEXT_JUSTIFY_LEFT"/>

   <!-- 小时 -->
   <label id="Hour" x="42%" y="64%" font = "Graphics.FONT_NUMBER_MEDIUM" justification = "Graphics.TEXT_JUSTIFY_RIGHT"/>

   <!-- 分钟 -->
   <label id="Minute" x="58%" y="64%" color="Gfx.COLOR_WHITE" font = "Graphics.FONT_NUMBER_MEDIUM" justification = "Graphics.TEXT_JUSTIFY_LEFT"/>

   <!-- 秒 -->
   <label id="Second" x="84%" y="64%" color="Gfx.COLOR_WHITE" font = "Graphics.FONT_TINY" justification = "Graphics.TEXT_JUSTIFY_LEFT"/>

   <!-- 天气图标 -->
   <bitmap id="WeatherIcon" x="26%" y="85%" filename="../drawables/weather/weather_condition_unknown.png" />

   <!-- 当前温度 -->
   <label id="Temperature" x="39%" y="85%" color="Gfx.COLOR_WHITE" font = "Graphics.FONT_XTINY" justification = "Graphics.TEXT_JUSTIFY_CENTER"/>

   <!-- 当前湿度 -->
   <label id="Humidity" x="68%" y="85%" color="Gfx.COLOR_WHITE" font = "Graphics.FONT_XTINY" justification = "Graphics.TEXT_JUSTIFY_CENTER"/>

</layout>