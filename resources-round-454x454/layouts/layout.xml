<layout id="WatchFace" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://developer.garmin.com/downloads/connect-iq/resources.xsd">

   <drawable class="CustomBackgroundDrawable"/>
   <!-- 距离 -->
   <label id="Distance" x="50%" y="4.5%" font = "@Fonts.rubik_f34" justification = "Graphics.TEXT_JUSTIFY_CENTER"/>

   <!-- 步数 -->
   <label id="StepCount" x="24%" y="17%" color="Gfx.COLOR_BLACK" font = "@Fonts.rubik_f34" justification = "Graphics.TEXT_JUSTIFY_LEFT"/>

   <!-- 心率 -->
   <label id="HeartRate" x="70%" y="18%" color="Gfx.COLOR_WHITE" font = "@Fonts.rubik_f34" justification = "Graphics.TEXT_JUSTIFY_CENTER"/>

   <!-- 卡路里 -->
   <label id="Calories" x="42%" y="28%" font = "@Fonts.rubik_f25" justification = "Graphics.TEXT_JUSTIFY_LEFT"/>

   <!-- 电量 -->
   <label id="Battery" x="15%" y="46%" font = "@Fonts.rubik_f25" justification = "Graphics.TEXT_JUSTIFY_CENTER"/>

   <!-- 日期 -->
   <label id="Date" x="28%" y="40%" font = "@Fonts.rubik_f34" justification = "Graphics.TEXT_JUSTIFY_LEFT"/>

   <!-- 星期 -->
   <label id="Weekday" x="72%" y="41.5%" font = "@Fonts.rubik_f23" justification = "Graphics.TEXT_JUSTIFY_RIGHT"/>

   <!-- 身体压力值 -->
   <label id="Stress" x="85%" y="46%" font = "@Fonts.rubik_f25" justification = "Graphics.TEXT_JUSTIFY_CENTER"/>

   <!-- 日落时间 -->
   <label id="SunsetTime" x="49.5%" y="54%" font = "@Fonts.rubik_f25" justification = "Graphics.TEXT_JUSTIFY_CENTER"/>

   <!-- AM / PM -->
   <label id="AMPM" x="7%" y="66%" font = "@Fonts.rubik_f20" justification = "Graphics.TEXT_JUSTIFY_LEFT"/>

   <!-- 小时 -->
   <label id="Hour" x="45%" y="63%" font = "@Fonts.rubik_f114" justification = "Graphics.TEXT_JUSTIFY_RIGHT"/>

   <!-- 分钟 -->
   <label id="Minute" x="55%" y="63%" color="Gfx.COLOR_WHITE" font = "@Fonts.rubik_f114" justification = "Graphics.TEXT_JUSTIFY_LEFT"/>

   <!-- 秒 -->
   <label id="Second" x="85%" y="64%" font="@Fonts.rubik_f34" justification = "Graphics.TEXT_JUSTIFY_LEFT"/>

   <!-- 天气图标 -->
   <bitmap id="WeatherIcon" x="25%" y="84%" filename="../drawables/weather/weather_condition_unknown.png" />

   <!-- 当前温度 -->
   <label id="Temperature" x="39%" y="86%" font = "@Fonts.rubik_f25" justification = "Graphics.TEXT_JUSTIFY_CENTER"/>

   <!-- 温度单位 -->
   <label id="TemperatureUnit" x="43%" y="86%" font="Graphics.FONT_XTINY" text="@Strings.TemperatureUnit" justification = "Graphics.TEXT_JUSTIFY_LEFT"/>

   <!-- 当前湿度 -->
   <label id="Humidity" x="68%" y="86%" font = "@Fonts.rubik_f25" justification = "Graphics.TEXT_JUSTIFY_CENTER"/>

</layout>